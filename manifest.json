{
  "api_version": "v1",
  "capabilities": [
    {
      "action": "get_topology",
      "description": "Returns full system graph including substrate locations"
    },
    {
      "action": "resolve_endpoint",
      "params": ["mind_name"],
      "description": "Returns URI for a Mind to enable OS routing"
    }
  ],
  "dependencies": ["system-health-mind"],
  "endpoints": {
    "local": "ipc:///tmp/magnus/system_map.sock",
    "cloud": "https://api.magnus-opus.oci.local/map"
  }
}
